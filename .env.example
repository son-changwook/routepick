# RoutePickr 환경 변수 예시 파일
# 실제 사용 시 .env로 복사하고 값을 설정하세요

# 환경 설정
NODE_ENV=development
SPRING_PROFILES_ACTIVE=local

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=routepick
DB_USERNAME=routepick
DB_PASSWORD=routepick2024!

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=routepick2024!

# JWT 설정
JWT_SECRET=routepick-jwt-secret-key-for-development-2024
JWT_ACCESS_TOKEN_EXPIRATION=1800000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# AWS 설정 (개발용)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=routepick-dev-uploads
CLOUDFRONT_DOMAIN=cdn-dev.routepick.com

# 소셜 로그인 설정 (개발용)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Firebase FCM 설정
FIREBASE_PROJECT_ID=routepick-dev
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# MinIO 설정 (개발용)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=routepick
MINIO_SECRET_KEY=routepick2024!

# 이메일 설정 (개발용 - MailHog)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# 모니터링 설정
GRAFANA_ADMIN_PASSWORD=routepick2024!

# Frontend 설정
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_URL=ws://localhost:8080/ws
REACT_NATIVE_PACKAGER_HOSTNAME=localhost

# Rate Limiting 설정
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# 한국 GPS 범위
KOREA_MIN_LATITUDE=33.0
KOREA_MAX_LATITUDE=38.6
KOREA_MIN_LONGITUDE=124.0
KOREA_MAX_LONGITUDE=132.0

# 추천 알고리즘 설정
TAG_WEIGHT=0.7
LEVEL_WEIGHT=0.3
MIN_RECOMMENDATION_SCORE=20

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,wmv